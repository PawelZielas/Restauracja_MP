<Window x:Class="Restauracja_MP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restauracja_MP"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Name="order_btn" Click="Order_btn_Click">
            <Grid>
                <Image Grid.Column="0" Stretch="UniformToFill" Source="Resources/Images/background1.png"/>
                <Label Margin="138,393,106.6,118" FontSize="30">
                    Zamów
                </Label>
            </Grid>
        </Button>

        <Button Grid.Column="1" x:Name="history_btn" Click="History_btn_Click">
            <Grid>
                <Image Grid.Column="1" Stretch="UniformToFill" Source="Resources/Images/background2.jpg"/>
                <Label Margin="79,393,40.6,118" FontSize="30">
                    Historia zamowien
                </Label>
            </Grid>
        </Button>
    </Grid>
</Window>
